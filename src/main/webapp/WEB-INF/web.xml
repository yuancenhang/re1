<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--过滤乱码的filter，所有的servlet后缀都加上sv-->
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.hang.crm.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>*.sv</url-pattern>
    </filter-mapping>
    <!--防止恶意登陆的filter，所有的servlet后缀都加上sv-->
    <filter>
        <filter-name>SafeFilter</filter-name>
        <filter-class>com.hang.crm.filter.SafeFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SafeFilter</filter-name>
        <url-pattern>*.sv</url-pattern>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>

    <!--监听器注册-->
    <listener>
        <listener-class>com.hang.crm.listener.ApplicationListener</listener-class>
    </listener>

    <!--首页-->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!--User块-->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.hang.crm.settings.web.controller.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/User/login.sv</url-pattern>
    </servlet-mapping>

    <!--Activity块-->
    <servlet>
        <servlet-name>ActivityController</servlet-name>
        <servlet-class>com.hang.crm.work.controller.ActivityController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ActivityController</servlet-name>
        <url-pattern>/work/activity/getUserList.sv</url-pattern>
        <url-pattern>/work/activity/save.sv</url-pattern>
        <url-pattern>/work/activity/pageList.sv</url-pattern>
        <url-pattern>/work/activity/delete.sv</url-pattern>
        <url-pattern>/work/activity/edit.sv</url-pattern>
        <url-pattern>/work/activity/editSave.sv</url-pattern>
        <url-pattern>/work/activity/detail.sv</url-pattern>
        <url-pattern>/work/activity/loadRemark.sv</url-pattern>
        <url-pattern>/work/activity/getRemark.sv</url-pattern>
        <url-pattern>/work/activity/updateRemark.sv</url-pattern>
        <url-pattern>/work/activity/saveRemark.sv</url-pattern>
        <url-pattern>/work/activity/deleteRemark.sv</url-pattern>
    </servlet-mapping>

    <!--Clue块-->
    <servlet>
        <servlet-name>ClueController</servlet-name>
        <servlet-class>com.hang.crm.work.controller.ClueController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClueController</servlet-name>
        <url-pattern>/work/clue/getUserList.sv</url-pattern>
        <url-pattern>/work/clue/saveClue.sv</url-pattern>
        <url-pattern>/work/clue/getClueList.sv</url-pattern>
        <url-pattern>/work/clue/selectById.sv</url-pattern>
        <url-pattern>/work/clue/getActivityList.sv</url-pattern>
        <url-pattern>/work/clue/saveguanlian.sv</url-pattern>
        <url-pattern>/work/clue/getguanlianActivityList.sv</url-pattern>
        <url-pattern>/work/clue/jieChuGuanLian.sv</url-pattern>
        <url-pattern>/work/clue/convert.sv</url-pattern>
        <url-pattern>/work/clue/getActivityListByName.sv</url-pattern>
        <url-pattern>/work/clue/getAllActivityList.sv</url-pattern>
        <url-pattern>/work/clue/zhuanHuan.sv</url-pattern>
    </servlet-mapping>

    <!--Tran块-->
    <servlet>
        <servlet-name>TranController</servlet-name>
        <servlet-class>com.hang.crm.work.controller.TranController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TranController</servlet-name>
        <url-pattern>/work/transaction/loadData.sv</url-pattern>
        <url-pattern>/work/transaction/getCustomerList.sv</url-pattern>
        <url-pattern>/work/transaction/loadTranList.sv</url-pattern>
        <url-pattern>/work/transaction/getActivityListByName.sv</url-pattern>
        <url-pattern>/work/transaction/getContactsListByName.sv</url-pattern>
    </servlet-mapping>
</web-app>